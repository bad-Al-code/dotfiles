{
  "workbench.iconTheme": "material-icon-theme",
  "terminal.integrated.cursorStyle": "line",
  "editor.fontFamily": "'Dank Mono', 'JetBrainsMonoNL Nerd Font','Droid Sans Mono', 'monospace', monospace",
  // "editor.fontWeight": "500", // 500 corresponds to Medium weight
  "breadcrumbs.enabled": false,

  "workbench.startupEditor": "none",
  "diffEditor.ignoreTrimWhitespace": false,
  "terminal.integrated.fontFamily": "'Dank Mono', 'JetBrainsMonoNL Nerd Font'",
  "vim.smartRelativeLine": true,
  "editor.lineNumbers": "relative",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.formatOnSave": true,
  "vim.commandLineModeKeyBindings": [],
  "editor.largeFileOptimizations": false,
  "editor.wordWrap": "on",
  "editor.minimap.renderCharacters": false,
  "editor.minimap.size": "fit",
  "editor.minimap.enabled": false,
  // Remove the scroll bar
  "editor.scrollbar.verticalScrollbarSize": 0,
  "editor.overviewRulerBorder": true,
  "window.zoomLevel": 1.7,

  "window.menuBarVisibility": "toggle",

  "vim.leader": "<Space>",
  "vim.hlsearch": true,
  "vim.normalModeKeyBindingsNonRecursive": [
    { "before": ["<S-h>"], "commands": [":bprevious"] },
    { "before": ["<S-l>"], "commands": [":bnext"] },
    { "before": ["<leader>", "b", "d"], "commands": [":bdelete"] },
    { "before": ["leader", "v"], "commands": [":vsplit"] },
    { "before": ["leader", "s"], "commands": [":split"] },

    {
      "before": ["leader", "h"],
      "commands": ["workbench.action.focusLeftGroup"]
    },
    {
      "before": ["leader", "j"],
      "commands": ["workbench.action.focusBelowGroup"]
    },
    {
      "before": ["leader", "k"],
      "commands": ["workbench.action.focusAboveGroup"]
    },
    {
      "before": ["leader", "l"],
      "commands": ["workbench.action.focusRightGroup"]
    },

    { "before": ["leader", "w"], "commands": [":w!"] },
    { "before": ["leader", "q"], "commands": [":q!"] },
    { "before": ["leader", "x"], "commands": [":x!"] },

    {
      "before": ["[", "d"],
      "commands": ["editor.action.marker.prev"]
    },
    {
      "before": ["]", "d"],
      "commands": ["editor.action.marker.next"]
    },

    {
      "before": ["<leader>", "c", "a"],
      "commands": ["editor.action.quickFix"]
    },
    {
      "before": ["leader", "leader"],
      "commands": ["workbench.action.quickOpen"]
    },
    { "before": ["leader", "p"], "commands": ["editor.action.formatDocument"] },
    {
      "before": ["g", "h"],
      "commands": ["editor.action.showDefinitionPreviewHover"]
    }
  ],

  "vim.visualModeKeyBindings": [
    { "before": ["<"], "commands": ["editor.action.outdentLines"] },
    { "before": [">"], "commands": ["editor.action.indentLines"] },

    { "before": ["J"], "commands": ["editor.action.moveLinesDownAction"] },
    { "before": ["K"], "commands": ["editor.action.moveLinesUpAction"] },

    { "before": ["leader", "c"], "commands": ["editor.action.commentLine"] }
  ],

  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "go.toolsManagement.autoUpdate": true,
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "workbench.editor.enablePreview": false,
  "window.commandCenter": false,
  "workbench.layoutControl.enabled": false,
  "workbench.activityBar.location": "top",
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "terminal.integrated.tabs.enabled": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "cmake.pinnedCommands": [
    "workbench.action.tasks.configureTaskRunner",
    "workbench.action.tasks.runTask"
  ],
  "cmake.showOptionsMovedNotification": false,
  "workbench.editor.showTabs": "single",
  "editor.experimentalInlineEdit.fontFamily": "medium",
  "extensions.autoUpdate": false,
  "workbench.editor.editorActionsLocation": "hidden",
  "workbench.colorTheme": "Tokyo Night"
}
